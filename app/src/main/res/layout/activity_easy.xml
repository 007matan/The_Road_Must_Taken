<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyDiffyActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_field_background"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_stRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_stIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_ndIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_rdIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_ndRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_fourthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_fifthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_sixthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_rdRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_seventhIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_egihthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_ninthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_fourthRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_tenthIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_eleventhIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_twelvethIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_fifthRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_thirdteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_fourteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_fifteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_sixthRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_sixteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_seventeenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_racing_car"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_eighteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_LLC_seventhRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_nineteenIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_twenetyIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_SIM_twentystIndex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitCenter"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_FB_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#8657c5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        app:icon="@drawable/ic_right" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_FB_Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#8657c5"
        app:icon="@drawable/ic_left" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_SIM_fifthLife"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_heart"
            android:layout_weight="1"
            android:visibility="invisible"
            android:scaleType="fitCenter"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_SIM_fourthLife"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_heart"
            android:visibility="invisible"
            android:scaleType="fitCenter"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_SIM_rdLife"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_heart"
            android:scaleType="fitCenter"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_SIM_ndLife"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_heart"
            android:scaleType="fitCenter"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_SIM_stLife"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_heart"
            android:scaleType="fitCenter"/>




    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="615dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_MTV_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:text="Score:"
            android:layout_weight="3"
            android:scaleType="fitCenter"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_MTV_score_output"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:editable="false"
            android:layout_weight="2"
            android:scaleType="fitCenter"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_MTV_distance"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:text="Dist:"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitCenter"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_MTV_distance_output"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:editable="false"
            android:layout_weight="2"
            android:scaleType="fitCenter"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>